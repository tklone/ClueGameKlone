
public class TestThings {
	public static void main(String[] args) {
		double[] weights = new double[4];
		weights[0] = 0.6;
		weights[1] = 0.3;
		weights[2] = 0.7;
		weights[3] = 0.4;
		
		double[] bins = new double[4];
		bins[0] = weights[0];
		
		for (int i = 1; i < weights.length; i++) {
			if (weights[i] < 1) {
				if ((bins[i-1] + weights[i]) < 1) {
					bins[i-1] = bins[i-1] + weights[i];
				} else if ((bins[i-1] + weights[i]) > 1) {
					bins[i] = weights[i];
				}
			}
		}
		
		for (int i = 0; i < bins.length; i++) {
			System.out.println(bins[i]);
		}
		
	}
}
